@page "/t"
@page "/"
<h3>TablePage</h3>

@if (@PersList != null)
{
    <table class="table table-striped w-auto">

        <!--Table head-->
        <thead class="alert-dark">
            <tr>
                <th>RowID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Country</th>
                <th>City</th>
                <th>Position</th>
                <th>Age</th>
            </tr>
        </thead>
        <!--Table head-->
        <!--Table body-->

        <tbody>
            @{ int rowNumber = 1; }
            @foreach (var i in @PersList)
            {
                <tr class="@((rowNumber % 2 == 0) ? "table-info" : "")">
                    <th scope="row">@rowNumber @{ rowNumber++; }</th>
                    <td>@i.Name</td>
                    <td>@i.Surname</td>
                    <td>@i.Country</td>
                    <td>@i.City</td>
                    <td>@i.Position</td>
                    <td>@i.Age</td>
                </tr>
            }
        </tbody>


        <!--Table body-->
    </table>
}
else
{
    <h3>Waite . . .</h3>
}
